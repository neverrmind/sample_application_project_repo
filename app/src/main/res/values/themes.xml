<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleApplicationProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SampleApplicationProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FormScreenButton">
        <item name="android:textSize">@dimen/unit18sp</item>
    </style>

    <style name="InputView">
        <item name="android:background">@drawable/bg_input_view</item>
        <item name="android:padding">@dimen/unit8dp</item>
        <item name="android:textSize">@dimen/unit20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="QuestionView">
        <item name="android:padding">@dimen/unit8dp</item>
        <item name="android:textSize">@dimen/unit20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>