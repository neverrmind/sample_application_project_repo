<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.FragmentHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--edit text for adding name-->
        <EditText
            android:id="@+id/editTextFormName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit8dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:layout_marginEnd="@dimen/unit8dp"
            android:hint="@string/adinizi_giriniz" />

        <!--edit text for adding surname-->
        <EditText
            android:id="@+id/editTextFormSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextFormName"
            android:layout_marginStart="@dimen/unit8dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:hint="@string/soyadinizi_giriniz" />

        <!--button for pick a birthday-->
        <Button
            android:id="@+id/buttonBirthday"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextFormSurname"
            android:text="@string/dogum_gunu_tarihinizi_seciniz" />

        <!--text view for show birthday-->
        <TextView
            android:id="@+id/textViewBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonBirthday"
            android:layout_marginStart="@dimen/unit8dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:hint="@string/dogum_gunu_tarihiniz"
            android:textColor="@color/black"
            android:textSize="@dimen/unit20sp" />

        <!--image view for taking photo-->
        <ImageView
            android:id="@+id/imageViewProfilePhoto"
            android:layout_width="@dimen/unit100dp"
            android:layout_height="@dimen/unit100dp"
            android:layout_below="@+id/textViewBirthday"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/unit8dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:src="@drawable/ic_person" />

        <!-- null account for custom account-->
        <com.example.sampleapplicationproject.widgets.CustomAccountWidget
            android:id="@+id/customAccountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewProfilePhoto"
            android:layout_marginStart="@dimen/unit8dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:background="@color/custom_account_widget" />

        <com.example.sampleapplicationproject.PhoneNumberEditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customAccountView"
            app:editTextHint="0 (xxx) xxx xx xx" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioButtonGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumberEditText"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kadin" />

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/erkek" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBoxAccount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonGender"
            android:text="@string/vadeli_hesap" />

        <CheckBox
            android:id="@+id/checkBoxAccount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxAccount1"
            android:text="@string/vadesiz_hesap" />

        <CheckBox
            android:id="@+id/checkBoxAccount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxAccount2"
            android:text="@string/altin_hesap" />

        <CheckBox
            android:id="@+id/checkBoxAccount4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxAccount3"
            android:text="@string/doviz_hesap" />

        <CheckBox
            android:id="@+id/checkBoxAccount5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxAccount4"
            android:text="@string/portfoy_hesap" />

        <TextView
            android:id="@+id/textViewContract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxAccount5"
            android:text="@string/sozlesmeyi_okudum_ve_onayliyorum"
            android:textSize="@dimen/unit20sp" />

        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewContract"
            android:text="Devam et" />

        <TextView
            android:id="@+id/textViewAccountTypeKeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>