<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/unit8dp"
    android:elevation="@dimen/unit8dp"
    app:cardCornerRadius="@dimen/unit8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--text view for name-->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/unit8dp"
            android:text="@string/ad"
            android:textColor="@color/black"
            android:textSize="@dimen/unit18sp" />

        <!--text view for surname-->
        <TextView
            android:id="@+id/textViewSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewName"
            android:padding="@dimen/unit8dp"
            android:text="@string/soyad"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>